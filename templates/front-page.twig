{% extends "base.1.twig" %}
{% set body_id = 'page-top' %}
{% set body_elements = 'data-spy="scroll" data-target=".navbar-fixed-top"' %}
    
{% block content %}

{% if posts.evenements|trim is not empty %}
	<div id="evenements">
		<h2>Événements à venir</h2>
		{% for row in posts.evenements[:3]|batch(3) %}
			<div class="row" style="padding: 0 15px">
				{% for post in row %}
					<div class="col-md-4">
						{% include ['tease-evenements.twig', 'tease.twig'] %}
					</div>
				{% endfor %}
			</div>
		{% endfor %}
	</div>
{% endif %}

<div id="publications">
    <h2 style="text-align: center;"><img src="{{site.theme.link}}/templates/data/image/pdvcerveau.svg" alt="{{site.name}}" height=50></h2>
	{% for row in posts.publications[:8]|batch(4) %}
		<div class="row" style="padding: 0 15px">
			{% for post in row %}
				<div class="col-md-3">
					{% include ['tease-publications.twig', 'tease.twig'] %}
				</div>
			{% endfor %}
		</div>
	{% endfor %}
</div>
{% endblock %}

{% block footer %}
{{ parent() }}
<!-- Theme MovDot JavaScript -->
<script src="{{site.theme.link}}/templates/vendor/jquery-easing/jquery.easing.1.3.js" type="text/javascript"></script>
<script src="{{site.theme.link}}/templates/vendor/velocity/velocity.min.js" type="text/javascript"></script>
<script src="{{site.theme.link}}/templates/vendor/nAnimation/nAnimation.1.0.min.js" type="text/javascript"></script>
<script src="{{site.theme.link}}/templates/js/movdot.js" type="text/javascript"></script>
{% endblock %}